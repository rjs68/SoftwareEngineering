import java.io.PrintStream;

public class Date {
	private int day;
	private int month;
	private int year;
	
	public Date(int day, int month, int year) {
		this.day = day;
		this.month = month;
		this.year = year;
	}
	
	public void print(PrintStream ps) {
		ps.print(day + "/" + month + "/" + year);
	}
	
	public int getDay() {
		return day;
	}
	
	public int getMonth() {
		return month;
	}
	
	public int getYear() {
		return year;
	}
	
	public int diffInYears(Date d) {
		return (year - d.getYear());
	}
}
